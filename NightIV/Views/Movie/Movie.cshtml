@model NightIV.ModelsView.MovieView
@using NightIV.Models
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie</h2>

@if (Model.Movie.Any())
            {
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movies</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var movies in Model.Movie)
                {
                    <tr>
                        <td>@movies.Id</td>
                        <td>@Html.ActionLink(movies.Name, "Details", "Movie", new { Id = movies.Id }, new {@class=""})</td>
                    </tr>
                }
        </tbody>
    </table>
            }
 else
            {
                <p>There is no Movies yet!</p>
            }
