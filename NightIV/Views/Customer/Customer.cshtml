@using NightIV.ModelsView
@using NightIV.Models
@model IEnumerable<NightIV.Models.Customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>


@if (Model.Any())
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>IsSubscribed</th>
                <th>MemberShipDiscount</th>
                <th>MemberShipType</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { Id = customer.Id }, new { @class = "" })</td>
                    <td>@customer.IsSubscribed</td>
                    <td>@customer.MemberShipType.DiscountRate%</td>
                    <td>@customer.MemberShipType.Name</td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <p>There is no Customer yet!</p>
}



