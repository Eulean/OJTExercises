@*@model NightIV.Models.Customer*@
@model NightIV.ModelsView.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customer"))
{
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.Name)
                    @Html.TextBoxFor(m => m.Customer.Name , new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.Birthday)
                    @Html.TextBoxFor(m => m.Customer.Birthday, new {@class = "form-control"})
                </div>
              
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.Customer.IsSubscribed) Subscribed to NewsLetter
                    </label>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Customer.MemberShipTypeId)
                    @Html.DropDownListFor(m => m.Customer.MemberShipTypeId,new SelectList(Model.MemberShipTypes, "Id", "Name"), "Select MemberShipTypes" ,new {@class = "form-control"} )
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            }